        </activity>

        <activity
            android:name=".views.screens.private.historico.KitchenHistoricoScreen"
            android:exported="true"
            android:launchMode="standard"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".views.screens.private.produtos.KitchenProdutosScreen"
            android:exported="true"
