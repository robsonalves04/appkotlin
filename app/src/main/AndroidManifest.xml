            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".views.screens.private.grade.KitchenGradeScreen"
            android:exported="true"
            android:launchMode="standard"
            android:screenOrientation="portrait">

        </activity>


    </application>

</manifest>