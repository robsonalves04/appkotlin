            android:screenOrientation="portrait"
            android:theme="@style/Theme.KDSMobile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


